<!DOCTYPE html>
<html>
<head>
  <title>Ajaxhealth</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag "https://www.google.com/jsapi" %>
  <%= javascript_include_tag 'application'%>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-full navbar-dark bg-danger">
    <%= link_to "Ajax Health", patient_dashboard_path, class: "navbar-brand" %>
    <ul class="nav navbar-nav">
      <li class="nav-item">
        <%= link_to "The Problem", problem_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Our Solution", solution_path, class: "nav-link" %>
      </li>
    </ul>
    <ul class="nav navbar-nav" style="float: right">

        <div class="btn-group">
          <button type="button" class="btn btn-danger" href="<%= patient_account_path %>"><i class="fa fa-user fa-fw"></i> Account</button>
          <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="sr-only">Toggle Dropdown</span>
          </button>
          <div class="dropdown-menu">
            <a class="dropdown-item" href="<%= patient_edit_path %>"><i class="fa fa-pencil fa-fw"></i> Edit</a>
            <a class="dropdown-item" href="<%= patient_alerts_path %>"><i class="fa fa-bell"></i> Alerts</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="<%= destroy_patient_session_path %>" data-method="delete"><i class="fa fa-sign-out"></i> Sign Out</a>
          </div>
        </div>
    </ul>
  </nav>

  <%= render "shared/flash" %>

  <div class="container-fluid">
    <div class="col-md-2">
        <%= render "patient/dashboard/menu" %>
    </div>
    <div class="col-md-10">


<%= yield %>

    </div>

  </div>
</body>
</html>
