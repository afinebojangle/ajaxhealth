<div class="col-md-6 col-md-offset-3">
  <div class="card">
    <div class="card-header card-inverse bg-danger">
      <h2>Sign up</h2>
    </div>
    <div class="card-block">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <%= f.input :email, autofocus: true, label: "Email:" %>
        <%= f.input :password, label: "Password:", placeholder: "8 characters minimum" %>
        <%= f.input :password_confirmation, autocomplete: "off", label: "Password Confirmation", placeholder: "8 characters minimum" %>
        <%= f.button :submit, "Sign up", class: "btn-danger" %>
      <% end %>
      </br>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>